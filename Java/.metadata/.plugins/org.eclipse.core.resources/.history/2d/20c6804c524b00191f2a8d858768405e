package assigment1.tucn.cs.DAL;

public class TeacherBuilder {

	private Teacher teacher;

	public TeacherBuilder() {
		teacher = new Teacher();
	}

	public TeacherBuilder setId(Long id) {
		teacher.setIdTeacher(id);
		return this;
	}

	public TeacherBuilder setFirstName(String firstName) {
		teacher.setFirstName(firstName);
		return this;
	}

	public TeacherBuilder setLastName(String lastName) {
		teacher.setLastName(lastName);
		return this;
	}

	public TeacherBuilder setUserName(String userName) {
		teacher.setUser_name(userName);
		return this;
	}

	public TeacherBuilder setPassword(String password) {
		teacher.setPassword(password);
		return this;
	}

	public TeacherBuilder setGroupId(Long groupId) {
		teacher.setId_group(groupId);
		return this;
	}

	public Teacher build() {
		return teacher;
	}

}
