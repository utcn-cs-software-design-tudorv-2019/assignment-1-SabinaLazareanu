package assigment1.tucn.cs.BLL;

import static javafx.scene.paint.Color.ORANGERED;

import assigment1.tucn.cs.DAL.StudentRepository;
import assigment1.tucn.cs.DAL.TeacherRepository;
import assigment1.tucn.cs.DAL.User;
import javafx.scene.paint.Color;

public class LoginService {

	private static final String ADMIN_USER = "admin";
	private static final String ADMIN_PASSWORD = "password";

	private StudentRepository studentRepo;
	private TeacherRepository teacherRepo;

	public LoginService(StudentRepository studentRepo, TeacherRepository teacherRepo) {
		this.studentRepo = studentRepo;
		this.teacherRepo = teacherRepo;
	}

	public User login(String userName, String password) {
		checkUser = txtUserName.getText().toString();
		checkPassword = passfield.getText().toString();
		if (checkPassword.equalsIgnoreCase(ADMIN_USER)) {
			if (checkUser.equalsIgnoreCase(ADMIN_PASSWORD)) {
				lblMessage.setText("ADMIN!");
				lblMessage.setTextFill(Color.GREEN);
			}else {
				lblMessage.setText("User or password incorrect!");
				lblMessage.setTextFill(ORANGERED);
			}
		}
		List<Student> students
	}

}
